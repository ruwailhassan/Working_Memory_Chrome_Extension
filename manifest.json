{
  "manifest_version": 3,
  "name": "Working Memory Panel for ChatGPT",
  "version": "0.1.0",
  "description": "Adds a persistent Working Memory side panel to ChatGPT.",
  "permissions": ["storage", "clipboardWrite"],
  "host_permissions": ["https://chat.openai.com/*", "https://api.openai.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": [
        "storage/storage.js",
        "compression/compress.js",
        "ui/panel.js",
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
